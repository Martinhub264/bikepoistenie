<script>
/* ---------------- KONFIG (kód je: bike321!@) ----------------
   Ukladáme iba SHA-256 hash (nie čistý kód).
   Hash bol vygenerovaný a vložený sem:
*/
const CODE_HASH = "b78718b45008af27f9ccd1a8fc877d9ba7457ca94b73ea3486346786b0a38625"; // bike321!@

const gateEl    = document.getElementById("gate");
const contentEl = document.getElementById("content");
const errEl     = document.getElementById("err");
const codeForm  = document.getElementById("codeForm");
const codeInput = document.getElementById("codeInput");
const logoutBtn = document.getElementById("logout");

/* zobraziť/skryť */
function showContent(){ gateEl.classList.add("hidden"); contentEl.classList.remove("hidden"); }
function lock(){ localStorage.removeItem("bp_partner_ok"); contentEl.classList.add("hidden"); gateEl.classList.remove("hidden"); }

/* ak už odomknuté */
if(localStorage.getItem("bp_partner_ok")==="1"){ showContent(); }

/* podpora URL parametra ?k=... */
(async () => {
  const p = new URLSearchParams(location.search).get("k");
  if (!p || localStorage.getItem("bp_partner_ok")==="1") return;
  const ok = await verify(p);
  if(ok){ localStorage.setItem("bp_partner_ok","1"); showContent(); }
})();

async function sha256(txt){
  const buf = new TextEncoder().encode(txt);
  const hash = await crypto.subtle.digest("SHA-256", buf);
  return Array.from(new Uint8Array(hash)).map(b=>b.toString(16).padStart(2,"0")).join("");
}
async function verify(code){ return (await sha256(code)) === CODE_HASH; }

codeForm.addEventListener("submit", async (e)=>{
  e.preventDefault();
  errEl.classList.add("hidden");
  const ok = await verify(codeInput.value.trim());
  if(ok){ localStorage.setItem("bp_partner_ok","1"); showContent(); }
  else { errEl.classList.remove("hidden"); codeInput.focus(); }
});
logoutBtn?.addEventListener("click", lock);
</script>
</bod
